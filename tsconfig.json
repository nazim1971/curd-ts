{
  "compilerOptions": {
    "target": "ES6",                        // Specify ECMAScript target version
    "module": "commonjs",                    // Specify module code generation
    "rootDir": "./src",                      // Root directory of your TypeScript files
    "outDir": "./dist",                      // Output directory for compiled JavaScript
    "esModuleInterop": true,                 // Allows default imports from modules with no default export
    "forceConsistentCasingInFileNames": true,// Ensure file names are case-sensitive
    "strict": true,                          // Enable strict type-checking options
    "skipLibCheck": true                     // Skip type checking of declaration files
  },
  "include": [
    "src/**/*"                               // Include all TypeScript files in the src/ directory
  ],
  "exclude": [
    "node_modules",                          // Exclude node_modules folder
    "dist"                                   // Exclude dist folder from being recompiled
  ]
}
